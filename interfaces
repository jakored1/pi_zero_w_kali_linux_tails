auto lo
iface lo inet loopback

auto pan0
iface pan0 inet dhcp
  bridge_stp off
  bridge_ports none

# WiFi AP = Disable ## Leave commented out, only define Enable OR Disable
                    ## When enabled, comment out the wlan0 stanza
allow-hotplug wlan0
iface wlan0 inet manual
  wpa-roam /etc/wpa_supplicant/wpa_supplicant.conf
  post-up iw wlan0 set power_save off

iface home inet dhcp

iface mobile-1 inet static
    address 192.168.43.254
    netmask 255.255.255.0
    gateway 192.168.43.1

iface mobile-2 inet static
    address 192.168.43.254
    netmask 255.255.255.0
    gateway 192.168.43.1

iface sepultura inet static
    address 192.168.43.254
    netmask 255.255.255.0
    gateway 192.168.43.1

# Android defaults
allow-hotplug usb0
iface usb0 inet static
    address 192.168.42.254
    netmask 255.255.255.0
    gateway 192.168.42.129

# PC
allow-hotplug usb9
iface usb9 inet static
    address 192.168.44.254
    netmask 255.255.255.0
##    gateway 192.168.44.1

allow-hotplug eth0
iface eth0 inet dhcp
